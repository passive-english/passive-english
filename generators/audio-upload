#!/usr/bin/env ruby

class AudioUploader
  def perform
    Dir.chdir(__dir__) do
      system "gsutil -m cp -n -r audio gs://passive-english"
      system "gsutil -m cp audio/index.csv gs://passive-english/audio/"
      system %{gsutil setmeta -h "Cache-Control:public, max-age=300" gs://passive-english/audio/index.csv}
    end
  end
end

AudioUploader.new.perform
